<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/login"
tools:context="com.example.marvinloco.aplicativologistico.Principal">


    <EditText
        android:id="@+id/etcontrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etusuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Contraseña"
        android:maxLength="15"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etcontrasena"
        android:layout_alignLeft="@+id/etcontrasena"
        android:layout_alignRight="@+id/etcontrasena"
        android:layout_alignStart="@+id/etcontrasena"
        android:layout_below="@+id/etcontrasena"
        android:layout_marginTop="14dp"
        android:onClick="ingresar"
        android:text="INGRESAR" />

    <Button
        android:id="@+id/btn_2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_1"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="registrar"
        android:text="REGISTRAR" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="35dp"
    android:layout_height="wrap_content"
    app:srcCompat="@mipmap/ic_person"
    android:layout_alignBottom="@+id/etusuario"
    android:layout_alignRight="@+id/imageView2"
    android:layout_alignEnd="@+id/imageView2" />

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    app:srcCompat="@mipmap/ic_locker"
    android:layout_above="@+id/btn_1"
    android:layout_toLeftOf="@+id/etcontrasena"
    android:layout_toStartOf="@+id/etcontrasena" />

    <EditText
        android:id="@+id/etusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:maxLength="10"
        android:hint="Cédula"
        android:inputType="numberDecimal" />

</RelativeLayout>