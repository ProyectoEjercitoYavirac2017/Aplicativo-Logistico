<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registro"
    tools:context="com.example.marvinloco.aplicativologistico.Principal">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro:"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp" />


    <EditText
        android:id="@+id/edi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt1"
        android:layout_alignRight="@+id/txt1"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Nombres Completos"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edi3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edi2"
        android:layout_alignStart="@+id/edi2"
        android:layout_below="@+id/edi2"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Cedula"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edi1"
        android:layout_alignStart="@+id/edi1"
        android:layout_below="@+id/edi1"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edi4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edi3"
        android:layout_alignStart="@+id/edi3"
        android:layout_below="@+id/btn_2"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edi5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edi4"
        android:layout_alignStart="@+id/edi4"
        android:layout_below="@+id/btn_3"
        android:ems="10"
        android:hint="Repetir Contraseña"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:layout_alignTop="@+id/edi3"
        android:layout_alignLeft="@+id/btn_3"
        android:layout_alignStart="@+id/btn_3" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Cancelar"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btn_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>