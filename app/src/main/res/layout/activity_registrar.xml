<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registro"
    tools:context="com.example.marvinloco.aplicativologistico.Principal">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:text="REGISTRO"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/etnomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombres Completos"
        android:inputType="textPersonName"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etnomb"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:ems="10"
        android:hint="Cédula"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etcont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPersonName"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btn_1"
        android:layout_alignLeft="@+id/btn_1"
        android:layout_alignStart="@+id/btn_1" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_3"
        android:layout_alignBottom="@+id/btn_3"
        android:layout_alignLeft="@+id/etcont"
        android:layout_alignStart="@+id/etcont"
        android:onClick="ingresar"
        android:text="Crear" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etcont"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etcont"
        android:layout_marginBottom="43dp"
        android:onClick="salir"
        android:text="Cancelar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_pencil"
        android:layout_alignTop="@+id/btn_1"
        android:layout_toLeftOf="@+id/txt1"
        android:layout_toStartOf="@+id/txt1"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_addperson"
        android:layout_alignTop="@+id/etnomb"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_locker"
        android:layout_below="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

</RelativeLayout>