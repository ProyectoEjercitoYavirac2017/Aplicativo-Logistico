<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registro"
    tools:context="com.example.marvinloco.aplicativologistico.Principal">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro:"
        android:textSize="25dp"
        android:layout_marginTop="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="registrar"
        android:text="Crear"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/etcont"
        android:layout_toLeftOf="@+id/txt1"
        android:layout_toStartOf="@+id/txt1" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="salir"
        android:text="Cancelar"
        android:layout_alignBaseline="@+id/btn_2"
        android:layout_alignBottom="@+id/btn_2"
        android:layout_toRightOf="@+id/etcont"
        android:layout_toEndOf="@+id/etcont" />

    <EditText
        android:id="@+id/etcodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Id"
        android:inputType="textPersonName"
        android:layout_below="@+id/txt1"
        android:layout_alignRight="@+id/txt1"
        android:layout_alignEnd="@+id/txt1" />

    <EditText
        android:id="@+id/etusua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/etcodi"
        android:layout_alignLeft="@+id/etcodi"
        android:layout_alignStart="@+id/etcodi" />

    <EditText
        android:id="@+id/etcont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPersonName"
        android:layout_below="@+id/etusua"
        android:layout_alignLeft="@+id/etusua"
        android:layout_alignStart="@+id/etusua" />

</RelativeLayout>